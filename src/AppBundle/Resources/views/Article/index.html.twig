{% extends '::layout.html.twig' %}

{% block content -%}
    <section class="row">
        <h1>
            Articles list
        </h1>

        {% for articles in articles %}
            <article class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <header>
                    <figure>
                        <img class="img-responsive" src="{{ articles.image }}" alt="picture">
                        <figcaption>
                            <h1>{{ articles.title }}</h1>
                        </figcaption>
                    </figure>
                </header>
                <p class="break-word">{{ articles.content }}</p>
                <footer>
                    <p>Released on {{ articles.createdAt|date }}</p>
                </footer>
            </article>
        {% endfor %}
    </section>



